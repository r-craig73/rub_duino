<div class="jumbotron">
<h2>Welcome to Arduino UNO Sensors Land</h2>

<h3>Click one of the action buttons below to start controlling the sensor.</h3>
</div>

<div class="container">
  <% if @sensors.any? %>
  <div class="panel panel-default">
    <div class="panel-heading"><h2>Sensors table</h2></div>
    <table class="table">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Pin</th>
      <th>Actions</th>
    </tr>
    <tr>
      <% @sensors.each do |sensor| %>
        <td><%= sensor.name %></td>
        <td><%= sensor.description %></td>
        <td><%= sensor.pin %></td>
        <td><button type="button" class="btn-lg btn-success"><%= link_to "Show", sensor_path(sensor) %></button>
            <button type="button" class="btn-lg btn-primary">Edit</button>
            <button type="button" class="btn-lg btn-danger">Delete</button>
        </td>
    </tr>
      <% end %>
    </table>
    </div>
  <% else %>
  <h2>No sensors are available..yet!</h2>
<% end %>
</div>
